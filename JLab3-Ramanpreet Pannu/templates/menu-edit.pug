extends layout

block layout-content
    h1.page-title Edit Menu Link
    if editLink
        form(method="post", action=`/admin/menu/edit/${editLink._id}/submit`)
            input(type="hidden", name="linkId", value=editLink._id)

            label(for="name") Link Name:
            input(type="text", name="name", value=editLink.name, required)

            label(for="path") Link Path:
            input(type="text", name="path", value=editLink.path, required)

            label(for="weight") Link Weight:
            input(type="number", name="weight", value=editLink.weight, required)

            button(type="submit") Save Changes
    else
        p Link not found.
